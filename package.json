{
  "name": "git-better",
  "displayName": "git-better",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.ShowCommentBox"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.showCommentBox",
        "title": "Show Comment Box"
      },
      {
        "command": "git-better.openWebview",
        "title": "Open Git Better Webview"
      },
      {
        "command": "git-better.button1",
        "title": "Button 1"
      },
      {
        "command": "git-better.button2",
        "title": "Button 2"
      },
      {
        "command": "buttonView.refresh",
        "title": "Refresh Button View"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pullRequestExplorer",
          "title": "Pull Request Explorer",
          "icon": "media/pricon.svg"
        }
      ]
    },
    "views": {
      "pullRequestExplorer": [
        {
          "id": "buttonView",
          "name": "Git Better Buttons"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "express": "^4.21.2"
  }
}
